<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/auth_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_12"
    android:paddingTop="@dimen/space_8"
    android:paddingEnd="@dimen/space_12"
    android:paddingBottom="@dimen/space_8">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/camera_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="?attr/colorOnBackground"
        app:title="All Cameras"
        app:titleTextColor="?attr/colorOnBackground" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/camera_list_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/camera_filter_all"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="All (8)"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/camera_filter_online"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Online (6)"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/camera_filter_offline"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Offline (2)"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/camera_filter_recording"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Recording"
            android:textAllCaps="false" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/camera_list_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/camera_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_8"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/space_8" />

</LinearLayout>
