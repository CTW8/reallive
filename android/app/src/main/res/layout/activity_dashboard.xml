<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/auth_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_login_logo_gradient"
                            android:gravity="center"
                            android:text="A"
                            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hi, Alex"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="?attr/colorOnBackground" />

                            <TextView
                                android:id="@+id/dashboard_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <ImageButton
                            android:id="@+id/btn_open_notifications"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/dashboard_action_notifications"
                            android:padding="8dp"
                            android:src="@drawable/ic_rl_notifications_24"
                            android:tint="?attr/colorOnSurfaceVariant" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/rl_error" />
                    </FrameLayout>

                    <ImageButton
                        android:id="@+id/btn_open_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/dashboard_action_search"
                        android:padding="8dp"
                        android:src="@drawable/ic_rl_search_24"
                        android:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#211F26"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <FrameLayout
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="#1F4A43">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_videocam_48"
                                    android:tint="@color/rl_success" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/stat_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="6"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Online"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#211F26"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <FrameLayout
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="#4B232A">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_rl_videocam_off_24"
                                    android:tint="@color/rl_error" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/stat_online"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="2"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Offline"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#211F26"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <FrameLayout
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="#4A3A1F">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_rl_notifications_active_24"
                                    android:tint="@color/rl_warning" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/stat_streaming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="3"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alerts"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Live Preview"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnBackground" />

                    <TextView
                        android:id="@+id/btn_open_camera_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_preview_front"
                            android:layout_width="240dp"
                            android:layout_height="188dp"
                            app:cardBackgroundColor="#211F26"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="136dp"
                                    android:background="#1A1825">

                                    <ImageView
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_videocam_48"
                                        android:tint="#33FFFFFF" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@color/rl_error"
                                        android:paddingStart="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="8dp"
                                        android:paddingBottom="3dp"
                                        android:text="LIVE"
                                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|end"
                                        android:layout_margin="6dp"
                                        android:background="#99000000"
                                        android:paddingStart="6dp"
                                        android:paddingTop="2dp"
                                        android:paddingEnd="6dp"
                                        android:paddingBottom="2dp"
                                        android:text="09:41:23"
                                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                        android:textColor="@color/white" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="12dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="12dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Front Door"
                                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Main Entrance"
                                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                        android:textColor="?attr/colorOnSurfaceVariant" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_preview_garage"
                            android:layout_width="240dp"
                            android:layout_height="188dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#211F26"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="136dp"
                                    android:background="#1D1828">

                                    <ImageView
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_videocam_48"
                                        android:tint="#33FFFFFF" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@color/rl_error"
                                        android:paddingStart="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="8dp"
                                        android:paddingBottom="3dp"
                                        android:text="LIVE"
                                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|end"
                                        android:layout_margin="6dp"
                                        android:background="#99000000"
                                        android:paddingStart="6dp"
                                        android:paddingTop="2dp"
                                        android:paddingEnd="6dp"
                                        android:paddingBottom="2dp"
                                        android:text="09:41:23"
                                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                        android:textColor="@color/white" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="12dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="12dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Garage"
                                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Side Building"
                                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                        android:textColor="?attr/colorOnSurfaceVariant" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_preview_backyard"
                            android:layout_width="240dp"
                            android:layout_height="188dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="4dp"
                            app:cardBackgroundColor="#211F26"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="136dp"
                                    android:background="#1A1522">

                                    <ImageView
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_videocam_48"
                                        android:tint="#33FFFFFF" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@color/rl_status_offline_bg"
                                        android:paddingStart="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="8dp"
                                        android:paddingBottom="3dp"
                                        android:text="OFFLINE"
                                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                        android:textColor="?attr/colorOnSurfaceVariant" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="12dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="12dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Backyard"
                                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Garden Area"
                                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                        android:textColor="?attr/colorOnSurfaceVariant" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All Cameras"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnBackground" />

                    <TextView
                        android:id="@+id/btn_filter_cameras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/empty_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/dashboard_empty_hint"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/camera_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            app:itemIconTint="@color/bottom_nav_item_tint"
            app:itemTextColor="@color/bottom_nav_item_tint"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_main_tabs" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="84dp"
        android:contentDescription="@string/dashboard_action_add"
        android:src="@drawable/ic_rl_add_24"
        app:backgroundTint="@color/auth_primary"
        app:tint="@color/auth_on_primary" />

</FrameLayout>
