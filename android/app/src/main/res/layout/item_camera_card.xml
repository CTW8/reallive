<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#10151E"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#1E293B">

        <ImageView
            android:id="@+id/camera_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Camera thumbnail"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/camera_thumbnail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No Preview"
            android:textColor="#CBD5E1"
            android:textSize="11sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/status_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#F44336" />

        <TextView
            android:id="@+id/camera_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="offline"
            android:textColor="#D1D5DB"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/camera_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Camera"
        android:textColor="#F8FAFC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/camera_stream_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="stream-key"
        android:textColor="#94A3B8"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/camera_runtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="heartbeat: -"
        android:textColor="#64748B"
        android:textSize="11sp" />

</LinearLayout>
